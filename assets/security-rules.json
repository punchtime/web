{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "pulses": {
      "$pulse": {
        ".read": "auth != null && auth.uid === $pulse.name",
        ".write": "auth != null && auth.uid === $pulse.name",
        ".validate": "newData.hasChildren(['name', 'time', 'employer', 'type']) && data.parent.child('companies').$company.child('employee') **contains** newData.val().employer"
      }
    },
    "companies": {
      "$company": {
        ".read": "auth != null && ( $company.child('employees') **contains** auth.uid || $company.child('employers') **contains** auth.uid )",
        ".write": "auth != null && ( $company.child('employees') **contains** auth.uid || $company.child('employers') **contains** auth.uid )",
        ".validate": "newData().val === 'true'"
      }
    }
  }
}
