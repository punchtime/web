doctype html
html(lang="en")
  - var stylesheet = '/src/css/firebase.css'
  include ../includes/head.jade
  body.dev
    p This is the firebase data, look at <code>firebase.js</code> to see how it works.
    form
      fieldset#auth
        fieldset#login
          legend log in
          input(type="button", value="login with facebook")#facebook
          input(type="button", value="login with google")#google
          input(type="button", value="login with twitter")#twitter
        fieldset#logout
          legend log out
          input(type="button", value="logout")
      fieldset#pulse(disabled)
        legend test pulse
        label(for="latitude") latitude
        input(type="text", name="latitude")
        label(for="longitude") longitude
        input(type="text", name="longitude")
        label(for="note") note
        input(type="text", name="note")
        label(for="time") time
        input(type="text", name="time")
        label(for="type") type
        input(type="text", name="type", value="checkin")
        input(type="submit")
      fieldset#create-user(disabled)
        legend add yourself to a company
        label(for="employee") employee of
        input(type="text", name="employee")
        label(for="employer") employer of
        input(type="text", name="employer")
        input(type="submit")
    #table
    script(src="/src/js/firebase.js")
    script(src="/src/js/scripts.js")
    include ../includes/foot.jade
